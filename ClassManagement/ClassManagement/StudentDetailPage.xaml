<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			x:Class="ClassManagement.StudentDetailPage"
			Title="Add Student">

	<ContentPage.Padding>
	    <OnPlatform x:TypeArguments="Thickness"
	    	iOS="10, 20, 10, 5"
	    	Android="10, 5, 10, 5"
        WinPhone="10, 5, 10, 5"/>
	</ContentPage.Padding>

	<ContentPage.Content>
		<StackLayout>
			<Entry Placeholder="First Name"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="Start"
					Completed="FirstNameCompleted"
					TextChanged="HandleTextChanged"
					x:Name="FirstNameEntry"></Entry>
			<Entry Placeholder="Last Name"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="Start"
					Completed="LastNameCompleted"
					TextChanged="HandleTextChanged"
					x:Name="LastNameEntry"></Entry>
			<StackLayout Orientation="Horizontal"
					HorizontalOptions="End">
				<Button Text="Cancel"
						Clicked="OnCancelButtonClicked"
						HorizontalOptions="End"
						VerticalOptions="Start"></Button>
				<Button Text="Done" 
						FontAttributes="Bold"
						Clicked="OnDoneButtonClicked"
						HorizontalOptions="End"
						VerticalOptions="Start"
						x:Name="DoneButton"></Button>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>

</ContentPage>
