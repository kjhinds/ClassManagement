<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			x:Class="ClassManagement.AddPeriodPage"
			Title="Add Period">

	<ContentPage.Padding>
	    <OnPlatform x:TypeArguments="Thickness"
	    	iOS="10, 20, 10, 5"
	    	Android="10, 5, 10, 5" />
	</ContentPage.Padding>

	<ContentPage.Content>
		<StackLayout>
			<Label Text="Add Period"
					HorizontalOptions="Center"
					VerticalOptions="Start"
					FontAttributes="Bold"></Label>
			<Entry Placeholder="Enter period name"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="Start"
					Completed="PeriodEntryCompleted"
					TextChanged="Handle_TextChanged"
					x:Name="PeriodNameEntry"></Entry>
			<StackLayout Orientation="Horizontal"
					HorizontalOptions="End">
				<Button Text="Cancel"
						Clicked="CancelAddPeriod"
						HorizontalOptions="End"
						VerticalOptions="Start"></Button>
				<Button Text="Done" 
						FontAttributes="Bold"
						Clicked="PeriodEntryCompleted"
						HorizontalOptions="End"
						VerticalOptions="Start"
						x:Name="DoneButton"></Button>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>

</ContentPage>
